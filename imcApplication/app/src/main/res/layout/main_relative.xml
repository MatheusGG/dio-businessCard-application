<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tittle"
        android:layout_marginHorizontal="24dp"
        android:hint="@string/peso_em_kg_ex_61_2kg"
        style="@style/inputStyle" />

    <EditText
        android:id="@+id/edt_altura"
        android:hint="@string/altura_em_cm_ex_178cm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edt_peso"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@+id/edt_peso"
        android:layout_alignStart="@+id/edt_peso"
        style="@style/inputStyle"/>

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_alignParentBottom="true"
        android:text="Calcular"
        android:padding="16dp"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imc"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        style="@style/inputStyle"
        android:textColor="@color/teal_200"
        android:textSize="48sp" />

</RelativeLayout>